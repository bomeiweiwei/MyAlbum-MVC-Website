@model MyAlbum.Web.Models.Album.UpdateAlbumViewModel
@using MyAlbum.Models.Category
@{
    ViewData["Title"] = "編輯相簿";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3>編輯相簿</h3>

<form asp-area="Member"
      asp-controller="Album"
      asp-action="Edit"
      method="post"
      enctype="multipart/form-data">

    @Html.AntiForgeryToken()
    <input asp-for="AlbumId" type="hidden" />

    <div class="mb-3">
        <label class="form-label">相簿類別</label>
        <select asp-for="AlbumCategoryId"
                asp-items="@(new SelectList(Model.CategoryList, nameof(AlbumCategoryDto.AlbumCategoryId), nameof(AlbumCategoryDto.CategoryName)))"
                class="form-select">
            <option value="">-- 請選擇類別 --</option>
        </select>
        <span asp-validation-for="AlbumCategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">標題</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">描述</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">更換封面（可不選）</label>
        <input asp-for="File" type="file" class="form-control" accept=".jpg,.jpeg,.png" />
        <span asp-validation-for="File" class="text-danger"></span>
        <div class="form-text">不選檔案則維持原封面。</div>
    </div>

    <button type="submit" class="btn btn-primary">儲存</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

